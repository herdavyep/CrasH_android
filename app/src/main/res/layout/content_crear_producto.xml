<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.heriberto.crash.vistas.CrearProductoActivity"
    tools:showIn="@layout/activity_crear_producto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="15dp" />


            <ImageView
                android:id="@+id/imagenProducto"
                android:layout_width="match_parent"
                android:layout_height="137dp"
                app:srcCompat="@drawable/imagenplasholder" />

            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="25dp" />

            <EditText
                android:id="@+id/nombreProducto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Nombre producto"
                android:inputType="textPersonName" />

            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="25dp" />

            <EditText
                android:id="@+id/presentacionProducto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Presentacion"
                android:inputType="textPersonName" />

            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="25dp" />

            <EditText
                android:id="@+id/precioProducto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Precio"
                android:inputType="textPersonName" />

            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="25dp" />

            <EditText
                android:id="@+id/vencimientoOferta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Vencimiento oferta"
                android:inputType="textPersonName" />

            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="25dp" />

            <EditText
                android:id="@+id/productosDisponibles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Productos disponibles"
                android:inputType="textPersonName" />

            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="25dp" />

            <EditText
                android:id="@+id/porcentajeDescuento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Porcentaje descuento"
                android:inputType="textPersonName" />

            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="25dp" />

            <EditText
                android:id="@+id/idAlmacen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Almacen"
                android:inputType="textPersonName" />


        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
