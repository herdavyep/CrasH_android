<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.heriberto.crash.vistas.CrearProductoActivity"
    tools:showIn="@layout/activity_crear_producto">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="137dp"
            app:srcCompat="@drawable/imagenplasholder" />

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="15dp" />

        <EditText
            android:id="@+id/editText3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Nombre producto"
            android:inputType="textPersonName" />

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="15dp" />

        <EditText
            android:id="@+id/editText4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Presentacion" />

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="15dp" />

        <EditText
            android:id="@+id/editText9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Precio" />

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="15dp" />

        <EditText
            android:id="@+id/editText8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Vencimiento oferta" />

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="15dp" />

        <EditText
            android:id="@+id/editText7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Productos disponibles" />

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="15dp" />

        <EditText
            android:id="@+id/editText6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Porcentaje descuento" />

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="15dp" />

        <EditText
            android:id="@+id/editText5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Almacen" />


    </LinearLayout>

</android.support.constraint.ConstraintLayout>
